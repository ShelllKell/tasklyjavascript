<h1>Add a task</h1>


<%= form_for @task, html: {class: "create"} do |f| %>


  <div class="errors">
    <% if @task.errors.any? %>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <%= message %>
          </ul>

          </div>
        <% end %>

    <% end %>


    <div class="container">
      <%= f.label :description %>
      <br>
      <%= f.text_field :task, autofocus: true %>
    </div>

    <div class="container">

      Date: <%= f.text_field :due_date %>
    </div>

    <div class="container">
      <%= f.submit "Create Task" %>
    </div>

<% end %>